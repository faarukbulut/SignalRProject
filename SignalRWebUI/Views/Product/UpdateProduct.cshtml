@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Düzenle</div>
						</div>
						<div class="card-body">
							@Html.HiddenFor(x => x.ProductID)
							<div class="form-group">
								<label>Ürün Adı</label>
								<input asp-for="ProductName" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Fiyat</label>
								<input asp-for="Price" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Ürün Görsel</label>
								<input asp-for="ImageUrl" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Ürün Kategorisi</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new {@class="form-control"})
							</div>
							<div class="form-group">
								<label>Ürün Açıklaması</label>
								<input asp-for="Description" type="text" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>