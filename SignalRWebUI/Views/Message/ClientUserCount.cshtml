
@{
    Layout = null;
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

<script type="text/javascript">
	$(document).ready(() => {
		var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:44330/SignalRHub").build();

		connection.start().then(() => {


		}).catch((err) => {
			console.log(err);
		});

		connection.on("ReceiveClientCount", (value) => {
			$("#clientcount").text(value);
		});
	});
</script>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anlık Client Sayfası: <span id="clientcount"></span></h4>
	</div>
</div>