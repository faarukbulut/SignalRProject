@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Düzenle</div>
						</div>
						<div class="card-body">
							@Html.HiddenFor(x => x.SocialMediaID)
							<div class="form-group">
								<label>Başlık</label>
								<input asp-for="Title" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Icon</label>
								<input asp-for="Icon" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Link</label>
								<input asp-for="Url" type="text" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>