@model RegisterDto
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR Restoran Kayıt</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" width="500" height="660">
			</div>
			<form class="form-detail" method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<input type="text" asp-for="Name" class="input-text" placeholder="Adınız" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Surname" class="input-text" placeholder="Soyadınız" required>
				</div>
				<div class="form-row">
					<input type="email" asp-for="Mail" class="input-text" placeholder="E-Posta" required>
				</div>
				<div class="form-row">
					<input type="password" asp-for="Password" class="input-text" placeholder="Şifre" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Username" class="input-text" placeholder="Kullanıcı Adınız" required>
				</div>
				<div class="form-row-last">
					<input type="submit" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>