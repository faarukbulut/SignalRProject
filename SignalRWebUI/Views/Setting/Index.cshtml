@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Profil İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Profil Düzenle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>E-Posta</label>
								<input asp-for="Mail" type="email" class="form-control">
							</div>
							<div class="form-group">
								<label>Adınız</label>
								<input asp-for="Name" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Soyadınız</label>
								<input asp-for="Surname" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Kullanıcı Adı</label>
								<input asp-for="Username" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Şifre</label>
								<input asp-for="Password" type="password" class="form-control">
							</div>
							<div class="form-group">
								<label>Şifre (Tekrar)</label>
								<input asp-for="Password2" type="password" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
