@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Referans Düzenle</div>
						</div>
						<div class="card-body">
							@Html.HiddenFor(x => x.TestimonialID)
							<div class="form-group">
								<label>Ad Soyad</label>
								<input asp-for="Name" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Müşteri Ünvan</label>
								<input asp-for="Title" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Müşteri Görsel</label>
								<input asp-for="ImageUrl" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Müşteri Görsel</label>
								<input asp-for="Comment" type="text" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
