@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>Ad Soyad</label>
								<input asp-for="Name" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Telefon</label>
								<input asp-for="Phone" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>E-Posta</label>
								<input asp-for="Mail" type="email" class="form-control">
							</div>
							<div class="form-group">
								<label>Kişi Sayısı</label>
								<input asp-for="PersonCount" type="number" class="form-control">
							</div>
							<div class="form-group">
								<label>Rezervasyon Tarihi</label>
								<input asp-for="Date" type="date" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
