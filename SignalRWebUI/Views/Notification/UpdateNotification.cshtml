@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Bildirim Düzenle</div>
						</div>
						<div class="card-body">
							@Html.HiddenFor(x => x.NotificationID)

							<div class="form-group">
								<label>Bildirim Türü</label>
								<input asp-for="Type" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Bildirim Icon</label>
								<input asp-for="Icon" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Açıklama</label>
								<input asp-for="Description" type="text" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
