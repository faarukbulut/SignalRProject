@model CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Öne Çıkan Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>Başlık 1</label>
								<input asp-for="Title1" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Başlık 2</label>
								<input asp-for="Title2" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Başlık 3</label>
								<input asp-for="Title3" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Açıklama 1</label>
								<input asp-for="Description1" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Açıklama 2</label>
								<textarea asp-for="Description2" rows="5" class="form-control"></textarea>
							</div>
							<div class="form-group">
								<label>Açıklama 3</label>
								<textarea asp-for="Description3" rows="5" class="form-control"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
