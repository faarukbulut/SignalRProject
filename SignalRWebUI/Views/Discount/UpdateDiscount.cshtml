@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirim Düzenle</div>
						</div>
						<div class="card-body">
							@Html.HiddenFor(x => x.DiscountID)
							<div class="form-group">
								<label>Ürün Adı</label>
								<input asp-for="Title" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>İndirim Oranı</label>
								<input asp-for="Amount" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Ürün Görsel</label>
								<input asp-for="ImageUrl" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Açıklama</label>
								<input asp-for="Description" type="text" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>