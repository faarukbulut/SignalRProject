@using SignalRWebUI.Dtos.NotificationDto;
@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Okundu İşaretle</th>
									<th scope="col">Okunmadı İşaretle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@(item.Status == true ? "Okundu" : "Okunmadı")</td>
										<td><a href="/Notification/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-outline-success">Düzenle</a></td>
										<td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-warning">Okundu Yap</a></td>
										<td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-secondary">Okunmadı Yap</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notification/CreateNotification" class="btn btn-outline-primary">Yeni Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
