
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">QR Kod İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-action="Index" asp-controller="QRCode">
					<div class="card">
						<div class="card-header">
							<div class="card-title">QR Kod Oluştur</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>QR Değeri</label>
								<input name="value" type="text" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-primary">Oluştur</button>
						</div>
					</div>
				</form>

				@if (ViewBag.QrCodeImage != null)
				{
					<img src="@ViewBag.QrCodeImage" style="width:400px;height:400px;" />
				}

			</div>
		</div>
	</div>
</div>

