@using SignalRWebUI.Dtos.ContactDto;
@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Düzenle</div>
						</div>
						<div class="card-body">
							@Html.HiddenFor(x => x.ContactID)
							<div class="form-group">
								<label>Lokasyon</label>
								<input asp-for="Location" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Telefon</label>
								<input asp-for="Phone" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>E-Posta</label>
								<input asp-for="Mail" type="email" class="form-control">
							</div>
							<div class="form-group">
								<label>Açıklama</label>
								<textarea asp-for="FooterDescription" rows="5" class="form-control"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Düzenle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>